set shell := ["bash", "-o", "errexit", "-uc"]

update:
    ujust update
    misa upgrade
    # Update drivers
    fwupdmgr refresh --force
    fwupdmgr get-updates
    fwupdmgr update

install-defaults:
    mise install
    ujust install-gaming-flatpaks
    ujust install-incus
    ujust install-opentabletdriver
    ujust install-fonts
    ujust install-k8s-dev-tools
